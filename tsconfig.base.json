{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "baseUrl": "src",
      "paths": {
        "contexts/*": ["contexts/*"],
        "apps/*": ["apps/*"],
        "@jfollert/tasks": ["contexts/management/tasks"],
      }
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules", "src/**/*.spec.ts", "src/**/*.spec.tsx"]
  }
  